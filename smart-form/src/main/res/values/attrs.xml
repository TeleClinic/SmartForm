<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SmartTextInputLayout">
        <attr name="helperText" format="string" />
        <attr name="helperTextColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="SmartEditText">
        <attr name="setLabel" format="string" />
        <attr name="setTextColor" format="reference|color" />
        <attr name="setMandatory" format="boolean" />
        <attr name="setMandatoryErrorMsg" format="string" />
        <attr name="setRegexType" format="enum">
            <enum name="EMAIL_VALIDATION" value="0" />
            <enum name="MEDIUM_PASSWORD_VALIDATION" value="1" />
            <enum name="COMPLEX_PASSWORD_VALIDATION" value="2" />
            <enum name="PHONE_NUMBER_VALIDATION" value="3" />
            <enum name="NAME_VALIDATION" value="4" />
        </attr>
        <attr name="setRegexString" format="string" />
        <attr name="setRegexErrorMsg" format="string" />
        <attr name="setValidateOnKey" format="boolean" />
        <attr name="setPasswordField" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SmartDateOfBirthEditText">
        <attr name="sdofLabel" format="string" />
        <attr name="sdofTextColor" format="reference|color" />
        <attr name="sdofMandatory" format="boolean" />
        <attr name="sdofMandatoryErrorMsg" format="string" />
    </declare-styleable>

    <declare-styleable name="SmartPhoneNumberEditText">
        <attr name="spnLabel" format="string" />
        <attr name="spnOk" format="string" />
        <attr name="spnErrorMessage" format="string" />
        <attr name="spnTextColor" format="reference|color" />
        <attr name="spnMandatory" format="boolean" />
        <attr name="spnMandatoryErrorMsg" format="string" />
    </declare-styleable>

    <declare-styleable name="SmartClickableEditText">
        <attr name="scetLabel" format="string" />
        <attr name="scetTextColor" format="reference|color" />
        <attr name="scetMandatory" format="boolean" />
        <attr name="scetMandatoryErrorMsg" format="string" />
    </declare-styleable>

    <declare-styleable name="SmartCheckBox">
        <attr name="scbMandatory" format="boolean" />
        <attr name="scbColor" format="reference|color" />
        <attr name="scbErrorColor" format="reference|color" />
        <attr name="scbTextColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="SmartCheckBoxLayout">
        <attr name="scblMandatory" format="boolean" />
        <attr name="scblText" format="reference" />
        <attr name="scblColor" format="reference|color" />
        <attr name="scblErrorColor" format="reference|color" />
        <attr name="scblTextColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="SmartRadioGroup">
        <attr name="srgLabels" format="string" />
        <attr name="srgMandatory" format="boolean" />
        <attr name="srgColor" format="reference|color" />
        <attr name="srgErrorColor" format="reference|color" />
        <attr name="srgTextColor" format="reference|color" />
    </declare-styleable>
</resources>